<div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col">
    <%= link_to 'New User', new_admin_user_path, class: 'btn btn-success' %>
  </div>
</div>

<br />

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
	<h1><%= I18n.t('admin.users.list.header') %></h1>

	<table class="table table-striped">
	  <thead>
	  <tr>
	    <th><%= I18n.t('admin.users.list.full_name') %></th>
	    <th><%= I18n.t('admin.users.list.email') %></th>
	    <th><%= I18n.t('admin.users.list.active') %></th>
	    <th><%= I18n.t('admin.users.list.super_admin') %></th>
	    <th><%= I18n.t('admin.users.list.created_at') %></th>
	    <th><%= I18n.t('admin.users.list.updated_at') %></th>
	    <th colspan="2"></th>
	  </tr>
	  </thead>

	  <tbody>
	  <% @users.each do |user| %>
	    <tr>
	      <td class="align-middle"><%= user.full_name %></td>
	      <td class="align-middle"><%= user.email %></td>
	      <td class="align-middle"><%= user.active %></td>
	      <td class="align-middle"><%= user.super_admin %></td>
	      <td class="align-middle"><%= user.created_at %></td>
	      <td class="align-middle"><%= user.updated_at %></td>
	      <td class="align-middle"><%= link_to 'Edit', edit_admin_user_path(user) %></td>
	      <td class="align-middle"><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    </tr>
	  <% end %>
	  </tbody>
	</table>

	<%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
